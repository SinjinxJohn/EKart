{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true
    },
    "include": ["src/**/*","src/@types/**/*"],
    "exclude": ["node_modules", "dist"]
}